<Window x:Class="GA_MonteCarlo.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:GA_MonteCarlo"
        mc:Ignorable="d"
        Title="GA MonteCarlo"
        Height="624"
        Width="800"
        MinHeight="400"
        MinWidth="600">
    <Grid Margin="10,10,10,5">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="200"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>    
       <!-- Left Sidebar for Replay -->
    <StackPanel Grid.Column="0" Margin="0,0,10,0" Height="562" VerticalAlignment="Top">
        <Label Content="Replay Files:" FontWeight="Bold" Height="30"/>
        <ListBox x:Name="lbxReplayFiles" Height="484"/>
        <Button x:Name="btnReplay" Content="Replay" Margin="0,10,0,0" Click="BtnReplay_Click" Height="36"/>
    </StackPanel>

    <!-- Main Content Grid -->
    <Grid Grid.Column="1" RenderTransformOrigin="0.492,0.588">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <Label Grid.Row="0" Grid.Column="0" Content="Area A:" VerticalAlignment="Center" Margin="5"/>
        <TextBox x:Name="txtAreaA" Grid.Row="0" Grid.Column="1" Text="100" Margin="5,5,290,5"/>

        <Label Grid.Column="1" Content="Area B:" VerticalAlignment="Center" Margin="177,0,200,0"/>
        <TextBox x:Name="txtAreaB" Grid.Column="1" Text="100" Margin="256,5,6,5"/>

        <Label Grid.Row="1" Grid.Column="0" Content="Area C:" VerticalAlignment="Center" Margin="5"/>
        <TextBox x:Name="txtAreaC" Grid.Row="1" Grid.Column="1" Text="100" Margin="5,5,290,5"/>

        <Label Grid.Row="1" Grid.Column="1" Content="Area D:" VerticalAlignment="Top" Margin="177,5,200,0" Grid.RowSpan="3" Height="31"/>
        <TextBox x:Name="txtAreaD" Grid.Row="1" Grid.Column="1" Text="100" Margin="256,5,6,5"/>

        <Label Grid.Row="3" Grid.Column="0" Content="Steps (days):" VerticalAlignment="Center" Margin="5"/>
        <TextBox x:Name="txtSteps" Grid.Row="3" Grid.Column="1" Text="365" Margin="5"/>

        <Label Grid.Row="4" Grid.Column="0" Content="Generations:" VerticalAlignment="Center" Margin="5"/>
        <TextBox x:Name="txtGenerations" Grid.Row="4" Grid.Column="1" Text="15" Margin="5"/>

        <Label Grid.Row="5" Grid.Column="0" Content="Monte Carlo Runs:" VerticalAlignment="Center" Margin="5"/>
        <TextBox x:Name="txtMonteCarloRuns" Grid.Row="5" Grid.Column="1" Text="10" Margin="5"/>

        <Label Grid.Row="6" Grid.Column="0" Content="Population Size:" VerticalAlignment="Center" Margin="5"/>
        <TextBox x:Name="txtPopulationSize" Grid.Row="6" Grid.Column="1" Text="50" Margin="5"/>

        <Label Grid.Row="7" Grid.Column="0" Content="Vaccine Parameters" FontWeight="Bold" Margin="5,10,5,5"/>

        <Grid Grid.Row="8" Grid.ColumnSpan="2" Height="320" VerticalAlignment="Center">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <Label Grid.Column="0" Content="Hesitancy Rate:" VerticalAlignment="Center" Margin="5,0,5,0"/>
            <TextBox x:Name="txtHesitancyRate" Grid.Row="0" Grid.Column="1" Text="0.2" Margin="5,5,5,5"/>

            <Label Grid.Row="1" Grid.Column="0" Content="Production Rate:" VerticalAlignment="Center" Margin="5,0,5,0"/>
            <TextBox x:Name="txtProductionRate" Grid.Row="1" Grid.Column="1" Text="2" Margin="5,5,5,5"/>

            <Label Grid.Row="2" Grid.Column="0" Content="Spoilage Rate:" VerticalAlignment="Center" Margin="5,0,5,0"/>
            <TextBox x:Name="txtSpoilageRate" Grid.Row="2" Grid.Column="1" Text="0.01" Margin="5,5,5,5"/>

            <Label Grid.Row="3" Grid.Column="0" Content="Start Stock:" VerticalAlignment="Center" Margin="5,0,5,0"/>
            <TextBox x:Name="txtVaccineStockStart" Grid.Row="3" Grid.Column="1" Text="200" Margin="5,5,5,5"/>

            <Label Grid.Row="4" Grid.Column="0" Content="Vaccination Delay Days:" VerticalAlignment="Center" Margin="5,0,5,0"/>
            <TextBox x:Name="txtVaccinationDelay" Grid.Row="4" Grid.Column="1" Text="7" Margin="5,5,5,5"/>
        </Grid>

        <StackPanel Grid.Row="8" Grid.Column="0" Grid.ColumnSpan="2" Orientation="Horizontal" HorizontalAlignment="Left" Margin="109,156,0,144" Width="461">
            <Button x:Name="btnRunSimulation" Content="Run Simulation" Width="150" Height="30" Click="BtnRunSimulation_Click"/>
            <Button x:Name="btnCancelSimulation" Content="Cancel Simulation" Margin="5" Width="150" Height="30" Click="BtnCancelSimulation_Click" IsEnabled="False"/>
        </StackPanel>

        <StackPanel Grid.Row="8" Grid.Column="0" Grid.ColumnSpan="2" Orientation="Horizontal" HorizontalAlignment="Left" Margin="0,198,0,10" Width="580">
            <RichTextBox x:Name="txtOutput" IsReadOnly="True" VerticalScrollBarVisibility="Auto" Background="#F0F0F0" Height="85" Width="573"/>
        </StackPanel>
    </Grid>
</Grid>
</Window>
